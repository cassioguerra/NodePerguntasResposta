<%- include ('./partials/header.ejs') %>
<body>
    <%- include('./partials/navbar.ejs')%>
    <div class="container">
        <hr style="border: none; border-top: 2px solid #ccc; margin: 30px 0;">
        <h1 style="font-size: 32px; font-weight: bold; color: #333;"><%= pergunta.titulo %></h1>
        <p style="font-size: 18px; color: #666;"><%= pergunta.descricao %></p>
        <hr style="border: none; border-top: 2px solid #ccc; margin: 30px 0;">
        <form method="POST" action="/salvarResposta">
          <h3>Responda</h3>
          <div class="form-group">
            <label for="resposta">Resposta:</label>
            <textarea class="form-control" id="resposta" rows="5" placeholder="Digite sua Resposta" name="corpo"></textarea>
          </div>
          <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
          <button type="submit" class="btn btn-primary">Enviar</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% Resposta.forEach(Respostas => { %>
        <br>
        <div class="card">
          <div class="card-body">
            <p><%= Respostas.corpo %><br></p>
          </div>
        </div>
        <% }) %>
      </div>
      
</body>
<%- include ('./partials/footer.ejs') %>
